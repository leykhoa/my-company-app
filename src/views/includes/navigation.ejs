<body data-spy="scroll" data-target=".navbar" data-offset="50">
	<nav
		class="navbar navbar-expand-lg navbar-dark bg-dark navbar-inverse navbar-fixed-top"
	>
		<div class="container-fluid">
			<a class="navbar-brand <%= path ==='/' ? 'active': '' %>" href="/"
				>MY COMPANY</a
			>
			<button
				class="navbar-toggler"
				type="button"
				data-bs-toggle="collapse"
				data-bs-target="#navbarSupportedContent"
				aria-controls="navbarSupportedContent"
				aria-expanded="false"
				aria-label="Toggle navigation"
			>
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a
							class="nav-link <%= path ==='/attendance' ? 'active': '' %>"
							href="/attendance"
							>Attendance</a
						>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path ==='/user' ? 'active': '' %>"
							href="/user"
							>User
						</a>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path ==='/work-time' ? 'active': '' %>"
							href="/work-time"
							>Work Time
						</a>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path ==='/covid' ? 'active': '' %>"
							href="/covid"
							>Covid Infomation
						</a>
					</li>
				</ul>
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a
							class="nav-link <%= path ==='/login' ? 'active': '' %> <%= user ? 'display-none' : '' %>"
							href="/auth/login"
							>Login
						</a>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path ==='/logout' ? 'active': '' %> <%= !user ? 'display-none' : '' %>"
							href="/auth/logout"
							>Logout
						</a>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path ==='/signup' ? 'active': '' %>"
							href="/auth/signup"
							>Sign Up
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</body>
